@{
    var title = ViewData["Title"] ?? "مدیریت ایده";
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - ISM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" integrity="sha384-DVRdrbFtwDSxK+Y0ONaZVWeItPxX2VINeodIZ6hO6PvxI6Bfq5lHppZArYrusS4F" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazirmatn@v33.003/fonts/variable/Vazirmatn-font-face.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ISM.WebApp.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <header>
        <partial name="_Navbar" />
    </header>
    <div class="container py-4">
        <partial name="_Toast" />
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="mt-auto border-top bg-white">
        <partial name="_Footer" />
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-SkCPVwBEm90ij1AMPx/+qvOB0fOkH1ZZ1xdjQ671O5SpM90oCbGyF/F7kh/3Gzdh" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
